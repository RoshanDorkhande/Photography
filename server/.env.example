# Backend Environment Variables
# Copy this file to .env for local development
# Set these in Render dashboard for production

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/photography

# Frontend URL for CORS (Cloudflare Pages URL in production)
# For local development: http://localhost:5173
# For production: https://your-site.pages.dev
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Server Port (optional, defaults to 5000)
PORT=5000
